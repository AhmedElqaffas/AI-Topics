<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:cardCornerRadius="15dp">
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/menu_bg">

            <ImageView
                android:id="@+id/buttonImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:src="@drawable/path_finder_image"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/buttonLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/buttonImage"
                app:layout_constraintBottom_toBottomOf="@id/buttonImage"
                app:layout_constraintTop_toTopOf="@id/buttonImage"
                app:layout_constraintVertical_bias="0.9"
                android:background="@drawable/bg_parallelogram"
                android:paddingHorizontal="30dp"
                tools:text="Path Finder"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>